@model toletwebapp.Models.Building

@{
        ViewData["Title"] = "Edit";
}

<h1>Edit Building</h1>

<div class="row">
        <div class="col-md-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="Image" />

                        <div class="form-group">
                                <label asp-for="Block" class="control-label"></label>
                                <input asp-for="Block" class="form-control" />
                                <span asp-validation-for="Block" class="text-danger"></span>
                        </div>

                        
                        <div class="form-group">
                                <label asp-for="Road" class="control-label"></label>
                                <input asp-for="Road" class="form-control" />
                                <span asp-validation-for="Road" class="text-danger"></span>
                        </div>
                                                <div class="form-group">
                                <label asp-for="Note" class="control-label"></label>
                                <input asp-for="Note" class="form-control" />
                                <span asp-validation-for="Note" class="text-danger"></span>
                        </div>


                        <div class="form-group">
                                <button class="btn btn-primary">Edit</button>
                        </div>
                </form>
        </div>

        <div class="col-md-4">
            <a asp-controller="Building" asp-action="CreateFlat" asp-route-id="@Model.Id" class="btn btn-primary">
               Create Flat here 
            </a>


        </div>
</div>

<div>
        <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script src="https://cdn.ckeditor.com/4.19.0/standard/ckeditor.js"></script>
<script>
        $("#ImageUpload").change(function() {
                readURL(this);
        });
        CKEDITOR.replace( 'Description' );
</script>

}