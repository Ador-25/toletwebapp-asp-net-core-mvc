@model IEnumerable<Flat>

@{
        ViewData["Title"] = "Flats";
}

<h1>Flats</h1>




<div class="row" style="padding-left:10%">
    @foreach(var item in Model)
{
    <div>
        <div class= " row">
            <div>
                    <p>
        Beds: @item.Beds: Baths: @item.Baths Rent: @item.Rent 
    </p>
                </div>
            <div class="col">  <img src="/media/products/@item.Image1" class="card-img-top" alt="..." style=" width:10rem; height:12rem"></div>
        </div>
    </div>

    <a asp-controller="flat" asp-action="Details" asp-route-id="@item.FlatId">
        Details
    </a>

}
    <hr />
</div>



<div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages"
                    page-target="/admin/products/@ViewBag.CategorySlug"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange">
        </pagination>
</div>