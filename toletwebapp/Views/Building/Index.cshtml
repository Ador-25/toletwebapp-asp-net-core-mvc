@model IEnumerable<Building>

@{
        ViewData["Title"] = "Products";
}

<h1>Buildings</h1>

<p>
        <a asp-action="Create">Create New</a>
</p>


<div class="row" style="padding-left:10%">
    @foreach(var item in Model)
{
    <div class="col-auto" style="padding:10px; margin:10px">
        <div class="card shadow-lg p-3 mb-5 bg-#444444 rounded " style="width: 20rem;">
            <div class="text-center">
                <img src="/media/products/@item.Image" class="card-img-top" alt="..." style=" width:10rem; height:12rem">
                </div>

  <div class="text-center">
        <h5 class="card-title" style="padding:2px">Bashundhara 
            <p>
                Block: @item.Block Road: @item.Road
            </p>
        </h5>
  </div>

  <div class="text-center">
           <div class="col" style="padding:1px">
          <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn btn-warning" style="width:9rem">Edit</a> 
     </div>
     <div class="col" style="padding:1px">
           <a asp-action="CreateFlat" asp-route-id="@item.Id" class="btn btn-primary" style="width:9rem">Create Flat</a>
     </div>
     <div class="col" style="padding:1px">
         <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn btn-danger" style="width:9rem">Delete</a>
     </div>
      </div>




 

 




</div>





</div> 



   

}
    <hr />
</div>



<div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages"
                    page-target="/admin/products/@ViewBag.CategorySlug"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange">
        </pagination>
</div>