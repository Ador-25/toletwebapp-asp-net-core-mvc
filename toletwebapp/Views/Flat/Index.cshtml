@model IEnumerable<Flat>

@{
        ViewData["Title"] = "Flats";
}

<h1>Flats</h1>




<div class="row" style="padding-left:10%">
    @foreach(var item in Model)
{
    <div class="col-auto" style="padding-bottom:10px">
        <div class="card shadow-lg p-3 mb-5 bg-#444444 rounded " style="width: 20rem;">
            <div class="text-center">
                <img src="/media/products/@item.Image1" class="card-img-top" alt="..." style=" width:10rem; height:12rem">
                </div>

  <div class="text-center">
        <h5 class="card-title" style="padding:2px">Bashundhara 
            <p>
                Block: @item.Building.Block Road: @item.Building.Road
            </p>
            <p>
                Bedroom: @item.Beds Bathroom: @item.Baths Balcony: @item.Balcony
            </p>
            <p>
                Size: @item.Size Rent: @item.Rent
            </p>

        </h5>
  </div>
 <a asp-action="Edit" asp-route-id="@item.FlatId" class="btn btn-sm btn-warning">Edit</a> 
<a asp-action="Delete" asp-route-id="@item.FlatId" class="btn btn-sm btn-danger">Delete</a>
 




</div>





</div> 



   

}
    <hr />
</div>



<div class="d-flex w-100 justify-content-center">
        <pagination page-count="@ViewBag.TotalPages"
                    page-target="/admin/products/@ViewBag.CategorySlug"
                    page-number="@ViewBag.PageNumber"
                    page-range="@ViewBag.PageRange">
        </pagination>
</div>